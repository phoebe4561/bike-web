
@model IEnumerable<bike_web.Models.order>

@{
    ViewBag.Title = "我的訂單";
}

<div class="container1 mt-4 px-4 mb-3 table-responsive-lg">
    <h5 class="text-center bg-light rounded-1 border-start border-end border-4 border-primary py-2 fw-bold tracking-3 mb-3" style="width: 250px; letter-spacing: 0.5em;">我的訂單</h5>


    <table class="table table-striped table-hover text-center align-items-center" style="vertical-align:middle;" ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.user_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_num)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_price_total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.go_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_pay)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.user_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_name)
                </td>
                <td>
                    <img src="~/images/winni/@item.product_img"
                         style="width:150px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_num)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_price_total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.go_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_pay)
                </td>

                <td>
                    <a href="#" class="btn btn-outline-info text-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">刪除訂單</a>


                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    您確定要刪除 &nbsp; @item.product_name&nbsp; 訂單嗎?
                                </div>
                                <div class="modal-footer">
                                    <a href="@Url.Action("DeletOrder", "shopIndex")?id=@item.id"><button type="button" class="btn btn-primary">確定</button></a>
                                    <button type="button" class="btn btn-outline-secondary text-dark" data-bs-dismiss="modal">取消</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>
    <div class="d-flex justify-content-end p-3">
        <a href="@Url.Action("shopIndex", "shopIndex")"><button type="button" class="btn btn-outline-secondary px-4 me-3">回套裝行程</button></a>
    </div>
</div>


